%h1 Usuarios
-if current_user.role == "Admin"
  .panel.panel-default
    .panel-heading
      %h4 Jefes de Ã¡rea
    .panel-body
      %ul.list-group
        - User.where(:role => "1").each do |user|
          %li.list-group-item
            = link_to user.name + " " + user.lastname + ", jefe de " + (user.area != nil ? user.area.name : "No asignado"), user, :class => "list-group-item"
  .panel.panel-default
    .panel-heading
      %h4 Tutores
    .panel-body
      %ul.list-group
        - User.where(:role => "2").each do |user|
          %li.list-group-item
          = link_to user.name + " " + user.lastname + ", tutor en " + (user.area != nil ? user.area.name : "No asignado"), user, :class => "list-group-item"
  .panel.panel-default
    .panel-heading
      %h4 Internos Activos
    .panel-body
      - if Season.last != nil
        %ul.list-group
          - User.where(:season_id => Season.last.id).each do |user|
            %li.list-group-item
              = link_to user.name + " " + user.lastname + ", interno en " + (user.area != nil ? user.area.name : "No asignado"), user, :class => "list-group-item"
-else
  .panel.panel-default
    .panel-heading
      %h4 Internos en Ã¡rea
    .panel-body
      - if Season.last != nil
        %ul.list-group
          - User.where(:season_id => Season.last.id, :area_id => current_user.area.id).each do |user|
            %li.list-group-item
              = link_to user.name + " " + user.lastname + ", interno en " + (user.area != nil ? user.area.name : "No asignado"), user, :class => "list-group-item"